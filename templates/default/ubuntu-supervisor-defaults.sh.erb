# Defaults for supervisor initscript
# sourced by /etc/init.d/supervisor
# installed at /etc/default/supervisor by the maintainer scripts

#
# This is a POSIX shell fragment
#

# Additional options that are passed to the Daemon.
<% if node[:supervisord][:daemon_opts] -%>
DAEMON_OPTS="<%= node[:supervisord][:daemon_opts] %>"
<% else -%>
DAEMON_OPTS=""
<% end -%>
# Seconds to sleep between stop and start when restarting
<% if node[:supervisord][:restart_sleep_time] -%>DODTIME=<%= node[:supervisord][:restart_sleep_time] %><% end -%>
